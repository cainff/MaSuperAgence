{% extends 'base.html.twig' %}
{% block title 'Mon agence Lorem Ipsum'%}

{% block body %}
<div class="jumbotron text-center">
    <h1>Agence Lorem Ipsum</h1>
    <p>Nostrud dolore aliquip laboris est. Minim consectetur velit aliqua nisi mollit. Est incididunt mollit non cupidatat officia.</p>
</div>

<div class="container">
    <h2>Les derniers biens</h2>
    <div class="row flex">
        {% for property in properties %}
        <div class="col-3">
            <div class="card">
                <div clas="card-body">
                    <h5 class="card-title">
                        <a href="{{ path('property.show', {id:property.id, slug:property.slug}) }}">{{ property.title }}</a>
                    </h5>
                    <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
                    <div class="text-primary" style="font-size: 2rem; font-weight:bold">{{ property.formattedPrice }}</div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}